<main>
    <div class="hero-image" style="background-image: url(meal/Meal2.jpg);">
        <div id="packageHero">
            Choose from the meals below.

        </div>
    </div>
    <div id="package">
        {{#each package}}
        <div>
            <form action="/mealdetail" method="post">
                <img src="{{this.url}}" alt="{{this.alt}}">

                <button>
                    <p id="packCaption" style="margin-left: 20px;">{{this.caption}} </p>
                </button>
                <p id="packDes"> {{this.des}}</p>
                <p id="packMeal">(Includes {{this.meal}} meals)</p>
                <p id="packSyn">{{this.Synopsis}}</p>
                <p id="packPrice"> Starts from ${{this.price}}</p>
            </form>
        </div>
        {{/each}}

    </div>
</main>
<style>
    #package {
        display: grid;
        grid-gap: 5px;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        grid-rows: auto;
    }

    button {
        border: none;
        margin-left: 10px;
    }

    button:focus {
        outline: 0 !important;
    }

    form {
        box-shadow: 0 0 0 !important;
    }


    @media screen and (min-width: 375px) {
        #package {
            margin-left: 100px;
        }
    }
</style>
<script src="../controller/alterMeal.js"></script>