<main>
    <div id="formz">
        <form action="submit-signup" method="POST">
            <div class="container" style="border: 3px solid #f1f1f1">
                <h1>New User Registeration</h1>
                <p>Please fill in this form to create an account.</p>
                <hr>

                <label for="fname"><b>First Name</b></label>
                <input type="text" placeholder="First Name" name="fname" id="fname" value={{storedfname}}>
                <div id="formError">
                    {{#each fname}}
                    {{this}}
                    {{/each}}
                </div>


                <label for="lname"><b>Last Name</b></label>
                <input type="text" placeholder="Last Name" name="lname" id="lname" value={{storedlname}}>
                <div id="formError">
                    {{#each lname}}
                    {{this}}
                    {{/each}}
                </div>


                <label for="email"><b>Email</b></label>
                <input type="text" placeholder="Enter Email" name="email" id="email" value={{storedemail}}>
                <div id="formError">
                    {{#each email}}
                    {{this}}
                    {{/each}}
                </div>


                <label for="psw"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="password" id="psw" value={{storedpass}}>
                <div id="formError">
                    {{#each pass}}
                    {{this}}
                    {{/each}}
                </div>


                <label for="psw-repeat"><b>Confirm Password</b></label>
                <input type="password" placeholder="Confirm Password" name="passwordrepeat" id="psw-repeat"
                    value={{storedconpass}}>
                <div id="formError">
                    {{#each conpass}}
                    {{this}}
                    {{/each}}
                </div>


                <button type="submit" class="signinupbtn">Sign Up</button>
            </div>

            <div class="container signin">
                <p> Existing User? <a href="/login">Sign in</a>.</p>
            </div>
        </form>
    </div>
</main>
